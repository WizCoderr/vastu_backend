generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  role      String   @default("student") // student, admin
  phoneNumber String
  createdAt DateTime @default(now())

  enrollments      Enrollment[]
  progress         Progress[]
  payments         Payment[]
  deviceTokens     DeviceToken[]
  notificationLogs NotificationLog[]

  enrolledCourseIds String[] @default([])
}

model Course {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String?
  thumbnail    String?
  price        String
  published    Boolean @default(false)
  instructorId String // Placeholder for single instructor concept

  // S3 Migration Fields
  s3Key     String?
  s3Bucket  String?
  mediaType String? // "image"

  sections        Section[]
  enrollments     Enrollment[]
  payments        Payment[]
  courseResources CourseResource[]
  liveClasses     LiveClass[]
}

enum ResourceType {
  FREE
  PAID
}

model CourseResource {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  courseId  String       @db.ObjectId
  title     String
  s3Key     String
  s3Bucket  String
  type      ResourceType
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  course    Course       @relation(fields: [courseId], references: [id])
}

model Section {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  courseId String    @db.ObjectId
  course   Course    @relation(fields: [courseId], references: [id])
  lectures Lecture[]
  liveClasses LiveClass[]
}

model Lecture {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  videoUrl  String
  sectionId String     @db.ObjectId
  section   Section    @relation(fields: [sectionId], references: [id])
  progress  Progress[]

  // Video Provider support (Cloudinary vs Mux vs S3)
  videoProvider String? @default("cloudinary") // "cloudinary", "mux", "s3-mux"
  muxAssetId    String? // Mux Asset ID
  muxPlaybackId String? // Mux Playback ID (signed)
  muxReady      Boolean @default(false)

  // S3 Migration Fields
  s3Key    String?
  s3Bucket String?
}

model Enrollment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  courseId  String   @db.ObjectId
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  course Course @relation(fields: [courseId], references: [id])

  @@unique([userId, courseId]) // Prevent double enrollment
}

model Progress {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  userId    String  @db.ObjectId
  lectureId String  @db.ObjectId
  completed Boolean @default(false)

  user    User    @relation(fields: [userId], references: [id])
  lecture Lecture @relation(fields: [lectureId], references: [id])

  @@unique([userId, lectureId])
}

model Payment {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @db.ObjectId
  courseId   String   @db.ObjectId
  amount     String
  status     String // COMPLETED, FAILED, PENDING
  providerId String? // Stripe Intent ID (optional now)
  createdAt  DateTime @default(now())

  // Razorpay Fields
  razorpayOrderId   String?
  razorpayPaymentId String?
  razorpaySignature String?

  user   User   @relation(fields: [userId], references: [id])
  course Course @relation(fields: [courseId], references: [id])
}

// ============================================================================
// LIVE CLASSES FEATURE
// ============================================================================

enum LiveClassStatus {
  SCHEDULED
  LIVE
  COMPLETED
}

model LiveClass {
  id                  String          @id @default(auto()) @map("_id") @db.ObjectId
  courseId            String          @db.ObjectId
  batchId             String?         // Optional batch identifier for grouped classes
  title               String
  description         String?
  scheduledAt         DateTime        // Timezone-aware scheduled start time
  durationMinutes     Int             @default(60)
  meetingUrl          String          // Zoom/Google Meet/custom meeting link
  recordingUrl        String?         // Uploaded after class completion
  status              LiveClassStatus @default(SCHEDULED)
  notifySent          Boolean         @default(false) // 30-min reminder sent
  recordingNotifySent Boolean         @default(false) // Recording available notification
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  course Course @relation(fields: [courseId], references: [id])
  sectionId String? @db.ObjectId
  section Section? @relation(fields: [sectionId], references: [id])

  @@index([courseId])
  @@index([sectionId])
  @@index([scheduledAt])
  @@index([status])
  @@index([notifySent, scheduledAt]) // For cron job queries
}

// Device tokens for push notifications (FCM)
model DeviceToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  token     String   // FCM device token
  platform  String   @default("android") // android, ios, web
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, token]) // Prevent duplicate tokens per user
  @@index([userId])
}

// Notification log for tracking sent notifications
model NotificationLog {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String    @db.ObjectId
  type        String    // LIVE_CLASS, RECORDING_AVAILABLE
  title       String
  body        String
  data        String?   // JSON payload
  liveClassId String?   @db.ObjectId
  sent        Boolean   @default(false)
  sentAt      DateTime?
  error       String?
  createdAt   DateTime  @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([type])
  @@index([liveClassId])
}
